{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "lib": ["es2017", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "react-native",
    "noEmit": true,
    "maxNodeModuleJsDepth": 5,
    "types": ["node", "jest", "detox"],
    "paths": {
      "@notesnook/*": ["../../packages"],
      "@notifee/react-native": ["./node_modules/@ammarahmed/notifee-react-native"],
      "@notesnook/theme": ["../../packages/theme"],
      "@types/react": ["./node_modules/@types/react"]
    },
    "incremental": true
  },
  "exclude": ["native"]
}
