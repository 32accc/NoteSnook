{
  "name": "@notesnook/editor-mobile",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@mdi/js": "^7.2.96",
    "@mdi/react": "^1.6.0",
    "@notesnook/editor": "file:../editor",
    "@notesnook/theme": "file:../theme",
    "@notesnook/intl": "file:../intl",
    "@szhsin/react-menu": "^4.1.0",
    "buffer": "^6.0.3",
    "framer-motion": "^10.16.8",
    "localforage": "^1.10.0",
    "mdi-react": "9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-freeze": "^1.0.3",
    "tinycolor2": "1.6.0",
    "zustand": "^4.4.7",
    "@lingui/react": "4.11.2",
    "@lingui/core": "4.11.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "env-cmd": "^10.1.0",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "env-cmd -e all react-scripts start",
    "build": "env-cmd -e all react-scripts build && rm -rf build.bundle && rm -rf sourcemaps && mv build build.bundle && cp -r ./build.bundle/static/js/ sourcemaps && rm -r ./build.bundle/static/js/*.map",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "patch-package"
  },
  "homepage": ".",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/build.bundle"
        ]
      }
    }
  }
}
